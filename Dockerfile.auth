FROM node:20-alpine

# Install git
RUN apk add --no-cache git

# Set working directory
WORKDIR /app

# Clone the auth repository
RUN git clone https://github.com/Hack-PSU/auth.git .

# Install dependencies using yarn
RUN yarn install

# Expose port 3000
EXPOSE 3000

# Start the application
CMD ["yarn", "run", "dev"]
